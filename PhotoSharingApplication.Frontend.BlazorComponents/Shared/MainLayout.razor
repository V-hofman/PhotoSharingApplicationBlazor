@inherits LayoutComponentBase

<MudDialogProvider />
<MudSnackbarProvider />

<MudThemeProvider IsDarkMode=true/>

<MudLayout>
    <MudPaper MinHeight="100vh" MinWidth="100vw">
        <MudAppBar Dense="true">

            <MudText Typo="Typo.h6">Blazor be blazing</MudText>
            
        </MudAppBar>
        <MudDrawerContainer Class="mud-height-full">
            <MudDrawer @bind-Open="@open" Elevation="1" Variant="@DrawerVariant.Mini" Fixed="false" OpenMiniOnHover="true" >
                <MudDrawerHeader>

                </MudDrawerHeader>
                <MudDrawerContainer>
                    <MudNavMenu Bordered="true" Color="Color.Success">
                         <NavMenu/>
                    </MudNavMenu>                                 
                </MudDrawerContainer>
            </MudDrawer>
            <MudMainContent align-center>
                <MudContainer MaxWidth=MaxWidth.Medium >
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudDrawerContainer>
    </MudPaper>
</MudLayout>

@code
{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}

